<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".ui.splash.SplashActivity">

    <!-- Animated Background Particles -->
    <ImageView
        android:id="@+id/particle1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_particle"
        android:alpha="0.6"
        android:contentDescription="Background particle" />

    <ImageView
        android:id="@+id/particle2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="300dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_particle"
        android:alpha="0.4"
        android:contentDescription="Background particle" />

    <ImageView
        android:id="@+id/particle3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_particle"
        android:alpha="0.5"
        android:contentDescription="Background particle" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- App Logo with Animation -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Smart Campus Logo"
            android:scaleType="centerInside" />

        <!-- App Name with Animation -->
        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Smart Campus"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light" />

        <!-- Tagline with Animation -->
        <TextView
            android:id="@+id/taglineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your Intelligent Campus Companion"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:indeterminateTint="@color/white"
            android:visibility="visible" />

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <!-- Bottom Branding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Smart Technology"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.7"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</RelativeLayout>